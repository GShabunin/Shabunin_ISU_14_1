<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:TrainingTrackerV2.Model.SportActivities">
    <DataTemplate DataType="{x:Type model:TrainingModel}">

        <Border BorderThickness="1" CornerRadius="10" BorderBrush="AntiqueWhite">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="Имя :" />
                    <Label Content="{Binding Path=Name}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Дата" />
                    <Label Content="{Binding Path=DatePlanned}" />
                </StackPanel>

            </StackPanel>
        </Border>
    </DataTemplate>
   
    
</ResourceDictionary>